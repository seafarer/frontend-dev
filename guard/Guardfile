# Example Guardfile. Read more about Guardfiles:
# https://github.com/guard/guard
#
# Start guard:
#   $ guard start -i
#
# Or with bundler:
#   $ bundle exec guard start -i
#

guard 'livereload' do
 watch(%r{.+\.(sass|css|js|jpg|jpeg|png|html?|php|inc)$})
end

guard 'compass',
  :configuration_file => "config.rb" do
  watch(%r{scss/.+\.s[ac]ss})
end
